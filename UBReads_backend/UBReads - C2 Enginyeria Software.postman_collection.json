							"listen": "test",
							"script": {
								"exec": [
									"// Parse the response to JSON\r",
									"var jsonData = pm.response.json();\r",
									"\r",
									"// Check if the access_token exists in the response\r",
									"if (jsonData.access_token) {\r",
									"    // Set the access_token as a collection variable\r",
									"    pm.collectionVariables.set(\"access_token\", jsonData.access_token);\r",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
